{
  "name": "@vitejs/release-scripts",
  "version": "1.1.0",
  "description": "@vitejs release scripts",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "prettier": "pnpm prettier-ci --write",
    "prettier-ci": "prettier --cache --ignore-path=.gitignore --check '**/*.{ts,json,md,yml}'",
    "ci": "tsc && pnpm prettier-ci && pnpm build",
    "release": "tsx scripts/release.ts"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "execa": "^7.0.0",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "publint": "^0.1.9",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.13.0",
    "@types/prompts": "^2.4.2",
    "@types/semver": "^7.3.13",
    "esbuild": "^0.17.8",
    "prettier": "^2.8.4",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  }
}
